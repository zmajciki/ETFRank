{% extends '::base.html.twig' %}

{% block navbar_menu %}
    {#{{ knp_menu_render('ETFRankCandidateBundle:Builder:mainMenu', { 'style': 'navbar' }) }}#}
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-4">
            {% block sidebar %}
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Groups</h3>
                    </div>
                    <div class="panel-body">
                        <div class="text-right">
                            <a href="{{ path('group_create') }}" class="btn btn-success">Create new group</a>
                        </div>
                        {{ render(controller('ETFRankCandidateBundle:Group:listGroups')) }}
                    </div>
                </div>
            {% endblock %}
        </div>

        <div class="col-md-8">
            <div class="page-header">
                <h1>{% block page_header %}{% endblock %}</h1>
            </div>
            {% include '@BraincraftedBootstrap/flash.html.twig' %}
            {% block content %}{% endblock %}
        </div>
    </div>
{% endblock %}
